@using Microsoft.AspNet.Identity
@model IEnumerable<TechSupport.Channel>

@{
    ViewBag.Title = "All Channels";
    var UserId = User.Identity.GetUserId();
}

<h2>All Channels</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            Agents
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.AspNetUsers.Where(u => u.Id == UserId).Any())
                {
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Name)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @item.AspNetUsers.Count()
            </td>
            <td>
                @if (item.AspNetUsers.Where(u => u.Id == UserId).Any())
                {
                    @Html.ActionLink("SignOff", "SignOff", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("SignUp", "SignUp", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
