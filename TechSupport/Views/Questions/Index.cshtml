@using Microsoft.AspNet.Identity
@model IEnumerable<TechSupport.Models.QuestionsIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("user"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.TimeCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.TimeLastLocked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Locked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Channel1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Category1.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.TimeCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.TimeLastLocked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Locked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Channel1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Category1.Name)
        </td>
        <td>
            @Html.ActionLink("Details ", "Details", new { id=item.Question.Id })
            @if (User.Identity.GetUserId() == item.Question.Author)
            {
                if(!item.Question.Locked) {
                    @Html.ActionLink("Close ", "Close", new { id = item.Question.Id });
                }
                @Html.ActionLink("Delete ", "Delete", new { id = item.Question.Id })  
            }
            @if (User.IsInRole("admin"))
            {
                if (item.Question.Locked)
                {
                    @Html.ActionLink("Open ", "Open", new { id = item.Question.Id });
                }
                @Html.ActionLink("Delete ", "Delete", new { id = item.Question.Id })
            }
        </td>
    </tr>
}

</table>
